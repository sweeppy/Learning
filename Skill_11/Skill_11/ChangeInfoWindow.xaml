<Window x:Class="Skill_11.ChangeInfoWindow"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skill_11"
        mc:Ignorable="d"
        Title="ChangeInfoWindow" Height="127" Width="290" Closing="Window_Closing">
    <Grid KeyDown="Grid_KeyDown">
        <TextBox x:Name="ChangeText"
                 Text="{Binding ElementName=ChangeText, Path=Text}"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center" MouseEnter="ChangeText_MouseEnter"
                 />
    </Grid>
</Window>
