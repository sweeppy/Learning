@model Notebook.Authorization.UserRegistration
@{
    ViewData["Title"] = "Registration";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Sign up</h3>

            <form asp-action="Registration" asp-antiforgery="true" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-xs-12">
                <div class="form-group">
                    <input asp-for="LoginProp" class="form-control" placeholder="User name" />
                </div>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                </div>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                </div>
            </div>
            
            <div class="col-center col-xs-12">
                <button type="submit" class="btn-sign-up"><span>Sign up</span></button>
            </div>
            </form>
        </div>
    </div>
</div>
